<!DOCTYPE html>
<html lang="en">
<head>
    <title>Products</title>
</head>
<body>
    <h1>Rundoo Products Book</h1>

    <h2><a href="/products/AddProduct">Add a product</a></h2>
    <h2><a href="/products/SearchProducts">Search products</a></h2>

    <br>
    <h2> Products: </h2>   

    {{if len .}}
        <table> 
            <tr>
                <th>SKU</th>
                <th>Category</th>
                <th>Name</th>
            </tr>
            {{range .}}
                <tr>
                    <td>
                        <a href="/products/{{.Sku}}">{{.Sku}}</a>
                    </td>
                    <td>
                        {{.Category}}
                    </td>
                    <td>
                        {{.Name}}
                    </td>
                </tr>
            {{end}}

        </table>
    {{else}}
        <em>No products found</em>
    {{end}}

</body>
</html>
